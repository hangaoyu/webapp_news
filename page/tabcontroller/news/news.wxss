.main {
  height: 100%;
}
/*分类滚动栏*/
.scroll-tab{
   background: white;
   position: fixed;
   top: 0;
   z-index:1;
  white-space: nowrap;
}

.scroll-tab-item{
    display: inline-block;
    padding-bottom: 20px;
    margin-right: 20px;
    height: 34px;
}
.scroll-text{
  font-size: 16px;
  padding: 0px 10px; 
  line-height: 34px;
}

/*分类页面*/
.category{
  position: fixed;
  top: 0px;
  right: 0px;
  width:40px;
  height: 34px;
  z-index: 1;
  background: white;
}
.category-icon{
  z-index: 5;
  margin-left: 5px;
  width:30px;
  height: 30px;
  border-radius: 15px;

}
.category-list{
  opacity: 0.98;
  flex-direction:row;
  z-index: 3;
  position:fixed;
  top:-800px;
  width: 100%;
  height: 800px;
  background-color: white;
}
.category-item{
  width: 15%;
  height: 20px;
  margin: 10px 2.5%;
  padding: 2.5%;
  font-size: 10px;
  text-align: center;
  float: left;

  background: lightgray;
  border-radius: 15px;
  
}

/*列表页*/
.listview {
  width: 100%; 
  position: fixed;
  margin-top: 34px;
  background-color: white;
  z-index: 2;
}
/*广告*/
.swiper-item{
    display: block;
    width: 100%;
    height: 150px;
}
.banner-image{
  width: 100%;
}

/*cell*/
.cellview {

  position: relative;
  height: 220rpx;
  padding: 10px 0 10px 10px;
  font-size: 14px;
  padding-right: 10px;
  background: #fff;
  border-bottom: 1px solid lightgray;
}
.cellimage{
  
   width: 100px;
  height: 100px;
  border-radius: 3px;
  float: left;
}
.celltext{
   position: absolute;
  float: left;
  line-height: 20px;
  font-size: 16px;
padding-left: 20rpx;
  margin-bottom: 50rpx;
}
.cellsource{
  position: absolute;
  color: gray;
  
  font-size: 13px; 
  left: 280rpx;
  bottom: 20rpx;
}
.cellreply{
    position: absolute;
  background: lightgray;
  opacity: 0.5;
  padding: 2px;
border-radius: 2px;
  font-size: 11px; 
  right: 28rpx;
  bottom: 20rpx;
}
/*底部加载更多按钮*/
.getmore{
  height: 34px;
  line-height: 34px;
  border: 1px solid lightgray;
  margin: 3px;
}

